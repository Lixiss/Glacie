<partial>
  <record-type name="AmbientCharacter" path="AmbientCharacter.tpl">
    <inherits>
      <inherit record="Character" />
      <inherit record="TemplateBase.AmbientCharacterSkillManager" />
    </inherits>
    <var-group>
      <var-group name="Header" system="true">
        <field name="ActorName" var-class="variable" var-type="string" />
        <field name="Class" var-class="static" var-type="string" var-default-value="AmbientCharacter" />
        <field name="FileDescription" var-class="variable" var-type="string" />
      </var-group>
      <var-group name="Config">
        <field name="controllerType" var-class="picklist" var-type="string" var-default-value="None;Stooge;" />
      </var-group>
    </var-group>
  </record-type>
</partial>