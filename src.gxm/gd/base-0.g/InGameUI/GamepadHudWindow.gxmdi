        <field name="buttonY" var-class="variable" var-type="file_dbr" />
        <field name="labelA" var-class="variable" var-type="file_dbr" />
        <field name="labelB" var-class="variable" var-type="file_dbr" />
        <field name="labelDpadUp" var-class="variable" var-type="file_dbr" />
        <field name="labelRightStick" var-class="variable" var-type="file_dbr" />
        <field name="labelRightStickClick" var-class="variable" var-type="file_dbr" />
        <field name="labelX" var-class="variable" var-type="file_dbr" />
        <field name="labelY" var-class="variable" var-type="file_dbr" />
      </var-group>
    </var-group>
  </record-type>
</partial>