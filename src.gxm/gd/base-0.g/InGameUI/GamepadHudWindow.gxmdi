      </var-group>
      <var-group name="Config">
        <field name="buttonA" var-class="variable" var-type="file_dbr" />
        <field name="buttonB" var-class="variable" var-type="file_dbr" />
        <field name="buttonDpadUp" var-class="variable" var-type="file_dbr" />
