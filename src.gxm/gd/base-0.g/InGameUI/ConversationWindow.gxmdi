<partial>
  <record-type name="InGameUI.ConversationWindow" path="InGameUI/ConversationWindow.tpl">
    <inherits>
      <inherit record="InGameUI.Includes.Border" />
      <inherit record="InGameUI.Includes.WidgetWindow" />
    </inherits>
    <var-group>
      <var-group name="Header" system="true">
        <field name="ActorName" var-class="variable" var-type="string" />
        <field name="Class" var-class="static" var-type="string" />
        <field name="FileDescription" var-class="variable" var-type="string" />
      </var-group>
      <var-group name="Border">
        <field name="objBottomTexture" var-class="variable" var-type="file_tex" />
        <field name="objLeftTexture" var-class="variable" var-type="file_tex" />
        <field name="objLowerLeftTexture" var-class="variable" var-type="file_tex" />
        <field name="objLowerRightTexture" var-class="variable" var-type="file_tex" />
        <field name="objRightTexture" var-class="variable" var-type="file_tex" />
        <field name="objTopTexture" var-class="variable" var-type="file_tex" />
        <field name="objUpperLeftTexture" var-class="variable" var-type="file_tex" />
        <field name="objUpperRightTexture" var-class="variable" var-type="file_tex" />
      </var-group>
      <var-group name="ConversationWindow">
        <field name="acceptBitmap" var-class="variable" var-type="file_tex" />
        <field name="autosplit" var-class="variable" var-type="int" var-default-value="750" />
        <field name="bgColor.A" var-class="variable" var-type="real" var-default-value="128" />
        <field name="bgColor.B" var-class="variable" var-type="real" var-default-value="0" />
        <field name="bgColor.G" var-class="variable" var-type="real" var-default-value="0" />
        <field name="bgColor.R" var-class="variable" var-type="real" var-default-value="0" />
        <field name="closeButton" var-class="variable" var-type="file_dbr">
          <description>UIButton</description>
        </field>
        <field name="continueBitmap" var-class="variable" var-type="file_tex" />
        <field name="declineBitmap" var-class="variable" var-type="file_tex" />
        <field name="endBitmap" var-class="variable" var-type="file_tex" />
        <field name="gamepadCloseButton" var-class="variable" var-type="file_dbr" />
        <field name="gamepadCloseLabel" var-class="variable" var-type="file_dbr" />
        <field name="hoverColor.A" var-class="variable" var-type="real" var-default-value="64" />
        <field name="hoverColor.B" var-class="variable" var-type="real" var-default-value="64" />
        <field name="hoverColor.G" var-class="variable" var-type="real" var-default-value="255" />
        <field name="hoverColor.R" var-class="variable" var-type="real" var-default-value="255" />
        <field name="nameBox" var-class="variable" var-type="file_dbr" />
        <field name="objBgColor.A" var-class="variable" var-type="real" var-default-value="128" />
        <field name="objBgColor.B" var-class="variable" var-type="real" var-default-value="0" />
        <field name="objBgColor.G" var-class="variable" var-type="real" var-default-value="0" />
        <field name="objBgColor.R" var-class="variable" var-type="real" var-default-value="0" />
        <field name="optionSpacing" var-class="variable" var-type="int" var-default-value="0" />
        <field name="optionStyle" var-class="variable" var-type="file_dbr" />
        <field name="portrait" var-class="variable" var-type="file_dbr" />
        <field name="portraitAngle" var-class="variable" var-type="real" var-default-value="0.0" />
        <field name="questOverview" var-class="variable" var-type="file_dbr" />
        <field name="rolloverStyle" var-class="variable" var-type="file_dbr" />
        <field name="rolloverTextStyle" var-class="variable" var-type="file_dbr" />
        <field name="rolloverTitleStyle" var-class="variable" var-type="file_dbr" />
        <field name="sectionSpacing" var-class="variable" var-type="int" var-default-value="10" />
        <field name="textBox" var-class="variable" var-type="file_dbr" />
      </var-group>
    </var-group>
  </record-type>
</partial>